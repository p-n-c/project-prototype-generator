{
  "testEnvironment": "jsdom",
  "testMatch": [
    "<rootDir>/tests/**/*.test.[jt]s?(x)",
    "<rootDir>/tests/**/*.spec.[jt]s?(x)",
    "<rootDir>/validation/**/*.test.[jt]s?(x)"
  ],
  "testPathIgnorePatterns": ["<rootDir>/node_modules/"],
  "transform": {
    "^.+\\.(js|jsx|ts|tsx)$": [
      "babel-jest",
      { "presets": ["@babel/preset-env"] }
    ]
  }
}
